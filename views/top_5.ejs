<html>
<head>
    <meta charset="UTF-8">
    <link href="http://fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/skeleton.css">
    <link rel="stylesheet" href="/css/normalize.css">
</head>
<body class="container" style="margin-top:2%">
    <h2>Top 5 Seguidores</h2>
    <table class="u-full-width">
        <thead>
            <tr>
                <th>name</th>
                <th>screen_name</th>
                <th>SEGUIDORES</th>
                <th>linguagem</th>
            </tr>     
        </thead>
        <tbody>
            <% for(var i = 0; i < tweets.length; i++){ %>
            <tr>
                <td><%= tweets[i].name%></td>
                <td><%= tweets[i].screen_name%></td>
                <td style="text-align: right;"><%= tweets[i].followers_count%></td>
                <td style="text-align: center;"><%= tweets[i].lang%></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>