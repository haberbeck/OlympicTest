

<html>
<head>
  <meta charset="UTF-8">
  <link href="http://fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="/css/skeleton.css">
  <link rel="stylesheet" href="/css/normalize.css">
</head>
<body class="container"  style="margin-top:2%">
  <form action="/pesquisa" method="POST">

    <%if(locals.err){%>
      <%err.forEach(function(err){ %>
      <font COLOR="red"><li><%=err.msg%></li></font>
    <% }); %>
    <% } %>

    <h2>Pesquisar no Twiiter</h2>
    <div class="row">
      <div class="five columns">
        <label for="hasttag">Digite uma hastag (Ex: #brasil):</label>
        <input class="u-full-width" type="text" name="hastag">
        <input class="button-primary" type="submit" value="Pesquisar">
      </div>
    </div>
  </form>
</body>
</html>